@import "bootstrap-sprockets";
@import "bootstrap";

h1 {
	color: #fff;
}

h2 {
	text-align:center;
	letter-spacing:4px;
	margin-bottom: 25px;
	font-family: 'Ultra', serif;
	color: #252B82;
}

h3 {
	margin-top: 0;
    font-weight:bold;
    font-size: 20px;
}

body {
	background: url(<%= asset_path 'pdx-bg.jpg' %>) no-repeat center center fixed;
	background-size: cover;
	font-family: 'Slabo 13px', serif;
	vertical-align:center;
	height: 500px;
}


.well {
	background: rgba(255,255,255,0.85);
	border-radius: 10px;
	border:0;
	margin-bottom: -10px;
}


p {
	margin-bottom:20px;
}
